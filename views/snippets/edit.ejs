<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= snippet.title %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/snippets<%= snippet._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="snippet[title]" value="<%= snippet.title %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="datetime-local" name="snippet[dateOfCreation]" value="<%= snippet.dateOfCreation %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="snippet[description]" value="<%= snippet.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/snippets">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>