<% include ../partials/commentHeaderNew %>
<div class="container">
    <div>
        <% console.log(snippet._id) %>
        <h1 style="text-align: center">Add New Comment to <%= snippet.title %></h1>
        <div style="width: 75%; margin: 25px auto;">
            <form action="/snippets/<%= snippet._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" type="text" name="comment[text]" placeholder="text" required></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/snippets/<%= snippet._id %>">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>