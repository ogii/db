<% include ../partials/header %>
<div class="container">
    <div>
        <h1 style="text-align: center">Edit Comment</h1>
        <div style="width: 75%; margin: 25px auto;">
            <form id="commentForm" action="/snippets/<%= snippet_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/snippets/<%= snippet_id %>">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>